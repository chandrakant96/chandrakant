<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F6F6"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/_4sdp"
        card_view:cardElevation="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_6sdp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_7sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/type_image"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_2sdp"
                android:src="@drawable/user_blue"
                card_view:civ_border_color="@color/primary"
                card_view:civ_border_width="@dimen/_2sdp" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/primary"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_ripplePersistent="false">

                <LinearLayout
                    android:id="@+id/category_DetailsSecction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Amar"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/cnametxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asdfsdaf"
                        android:textSize="@dimen/_12sdp" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                        android:id="@+id/doctorAddresstextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:textSize="@dimen/_12sdp" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/typeTextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sfadfas"
                        android:textSize="@dimen/_12sdp" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                        android:id="@+id/appoinmentdattxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="asdf"
                        android:textSize="@dimen/_12sdp" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                        android:id="@+id/transactiondatetextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="afsd"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>