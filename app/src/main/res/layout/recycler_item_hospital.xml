<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_6sdp">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="@color/rippelColor"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_ripplePersistent="false">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F2F2"
            app:cardElevation="@dimen/_2sdp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/relativeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageHospital"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_hospital"
                        card_view:civ_border_color="@color/primary"
                        card_view:civ_border_width="@dimen/_2sdp" />

                    <LinearLayout
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:orientation="vertical">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:id="@+id/txtHospitalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_2sdp"
                            android:text="Hamza Hospital"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtEstd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtBedCount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="NA "
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="gone" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtBedCountTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" beds, "
                                android:textSize="@dimen/_11sdp"
                                android:visibility="gone" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtDoctorCounts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Doctors"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtPackagesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_package_icon"
                            android:drawableLeft="@drawable/ic_package_icon"
                            android:drawablePadding="@dimen/_5sdp"
                            android:padding="@dimen/_2sdp"
                            android:text="10 Packages starting from"
                            android:textSize="@dimen/_11sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtStartingPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:padding="@dimen/_3sdp"
                                android:text="8500"
                                android:textColor="#76b833"
                                android:textSize="@dimen/_11sdp"
                                android:visibility="visible" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:background="#fbb03f"
                                android:padding="@dimen/_3sdp"
                                android:text="20% discount"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8sdp"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/txtLikes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="8                      likes" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/txtReviews"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="8                      likes" />


                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/txtDistance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="8                     likes" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="0dp"
                        android:id="@+id/materialLayoutPackage"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:mrl_rippleAlpha="0.1"
                        app:mrl_rippleColor="@color/rippelColor"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true"
                        app:mrl_ripplePersistent="false">

                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtSurgeryPackage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/SurgeryPackages"
                            android:textAllCaps="false"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_12sdp" />


                    </com.balysv.materialripple.MaterialRippleLayout>

                    <TextView
                        android:id="@+id/divider"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_5sdp" />


                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/primary"
                        app:mrl_rippleAlpha="0.1"
                        app:mrl_rippleColor="@color/rippelColor"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true"
                        app:mrl_ripplePersistent="false">


                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Book"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </com.balysv.materialripple.MaterialRippleLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </com.balysv.materialripple.MaterialRippleLayout>

</LinearLayout>