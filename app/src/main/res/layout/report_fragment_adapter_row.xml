<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    app:cardPreventCornerOverlap="false"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_6sdp"
    card_view:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
            android:id="@+id/doctorNamerowtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textSize="@dimen/_13sdp" />

        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
            android:id="@+id/cname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/checkupforLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prescription For :  "
                android:textSize="@dimen/_12sdp" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                android:id="@+id/checkUpforrowtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkup Date : "
                android:textSize="@dimen/_12sdp" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                android:id="@+id/checkupOnrowtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewDownloadLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_report_btn"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/primary"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_ripplePersistent="false">

                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/viewbtnrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/view"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_13sdp" />

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_report_btn"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/primary"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_ripplePersistent="false">

                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/downloadbtnrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/menu_download"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_13sdp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_report_btn"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/primary"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                app:mrl_ripplePersistent="false">

                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/sharebtnrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/share"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_13sdp" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

