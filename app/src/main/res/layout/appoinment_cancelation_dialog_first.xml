<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_30sdp"
        android:src="@drawable/ic_cancelation_first" />

    <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Are you sure ?"
        android:textColor="#212121"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You wish to"
            android:textColor="#212121"
            android:textSize="@dimen/_12sdp" />

        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Cancel"
            android:textColor="@color/primary"
            android:textSize="@dimen/_12sdp" />

        <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the appointment"
            android:textColor="#212121"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp">

        <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
            android:id="@+id/txtNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/corner_background"
            android:padding="8dp"
            android:text="No"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
            android:id="@+id/txtYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="@drawable/square_border_one"
            android:padding="8dp"
            android:text="Yes"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>


</LinearLayout>