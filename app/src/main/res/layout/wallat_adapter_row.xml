<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F6F6"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/_2sdp"
    card_view:cardElevation="4dp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_6sdp"
    card_view:cardPreventCornerOverlap="false">


    <LinearLayout
        android:id="@+id/SubTextfirstSecction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Light
                android:id="@+id/txtcrediteddebitedpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credited Points : "
                android:textColor="#6b6b6b"
                android:textSize="@dimen/_12sdp" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:id="@+id/txtPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service name : "
                android:textColor="#6b6b6b"
                android:textSize="@dimen/_12sdp" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:id="@+id/txtServiceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Id : "
                android:textColor="#6b6b6b"
                android:textSize="@dimen/_12sdp" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:id="@+id/txtBookingId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Light
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Date : "
                android:textColor="#6b6b6b"
                android:textSize="@dimen/_12sdp" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:id="@+id/txtTransactionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>