<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".activities.FilterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_close_white"
                android:drawableLeft="@drawable/ic_close_white"
                android:drawablePadding="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:text="Filter"
                android:textSize="@dimen/_13sdp" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:id="@+id/txtResetFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="Reset Filter"
                android:textSize="@dimen/_13sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/txtFilter"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="SPECIALISATION"
                            android:textAllCaps="true"
                            android:textColor="@color/primary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <RadioGroup
                                android:id="@+id/type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/pathology"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="OpenSans-Bold.ttf"
                                    android:padding="@dimen/_10sdp"
                                    android:text="Pathology" />

                                <RadioButton
                                    android:id="@+id/radiology"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"

                                    android:fontFamily="OpenSans-Bold.ttf"
                                    android:padding="@dimen/_10sdp"
                                    android:text="Radiology" />
                            </RadioGroup>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="NEARBY"
                            android:textAllCaps="true"
                            android:textColor="@color/primary" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <RadioButton
                                android:id="@+id/nearBy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text="Show Nearby" />


                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="AVAILABILITY"
                            android:textAllCaps="true"
                            android:textColor="@color/primary" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/check_box_selector"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text="Available Everyday" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/check_box_selector"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text=" Available Today" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@drawable/check_box_selector"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text=" Available Customize date and time" />

                        </RadioGroup>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Fees"
                            android:textAllCaps="true"
                            android:textColor="@color/primary" />

                        <RadioGroup
                            android:id="@+id/fees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">

                            <RadioButton
                                android:id="@+id/feesLow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text=" ₹  1 - 300" />

                            <RadioButton
                                android:id="@+id/feesMidle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text=" ₹  300 - 500" />

                            <RadioButton
                                android:id="@+id/feesHigh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text="Above ₹ 500" />

                        </RadioGroup>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="SHORT BY - USER LIKES"
                            android:textAllCaps="true"
                            android:textColor="@color/primary" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp">

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:button="@drawable/check_box_selector"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text=" High To Low" />

                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:button="@drawable/check_box_selector"
                                android:fontFamily="OpenSans-Bold.ttf"
                                android:padding="@dimen/_10sdp"
                                android:text=" Low To High" />

                        </RadioGroup>


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                android:id="@+id/txtFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/primary"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="apply filter"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </RelativeLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>