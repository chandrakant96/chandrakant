<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_6sdp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/relativeDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lineMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageDoctor"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            app:srcCompat="@drawable/ic_microscope"
                            card_view:civ_border_color="@color/primary"
                            card_view:civ_border_width="@dimen/_2sdp"
                            tools:ignore="MissingConstraints" />

                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/imgStar"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:background="@drawable/circle_text_white"
                            app:srcCompat="@drawable/ic_star_unliked_state"
                            tools:layout_editor_absoluteX="1dp"
                            tools:layout_editor_absoluteY="1dp"
                            tools:ignore="MissingConstraints" />


                    </android.support.constraint.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:orientation="vertical">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:id="@+id/txtHospitalName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_1sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_1sdp"
                            android:textSize="@dimen/_11sdp" />

                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtWorkingHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_1sdp"
                            android:text="Working hours"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtworkingFrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:padding="@dimen/_1sdp"
                                android:text="8 AM - 10 PM"
                                android:textSize="@dimen/_11sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:padding="@dimen/_1sdp"
                                app:srcCompat="@drawable/ic_meeting_point" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:gravity="center_vertical"
                                android:maxLines="3"
                                android:padding="@dimen/_1sdp"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lineTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_1sdp"
                        android:text="Specialies in - "
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtTest1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/test_border"
                                android:gravity="center"
                                android:maxLength="10"
                                android:padding="@dimen/_4sdp"
                                android:text="Blood Test" />

                            <TextView
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="wrap_content" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtTest2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/test_border"
                                android:gravity="center"
                                android:maxLength="10"
                                android:padding="@dimen/_4sdp"
                                android:text="ECR" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtTest3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/test_border"
                                android:gravity="center"
                                android:maxLength="10"
                                android:padding="@dimen/_4sdp"
                                android:text="Blood Test" />

                            <TextView
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="wrap_content" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtTestCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_4sdp"
                                android:text="+ 2 more" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAvailbale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                    android:id="@+id/txtAvailableTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_verified"
                    android:drawableLeft="@drawable/ic_verified"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:text="Available"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/txtLikes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_like_unliked_state"
                    android:gravity="center"
                    android:text="0 Likes" />


                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/txtDistance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_meeting_point"
                    android:gravity="center"
                    android:text="0 km" />


                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/txtReviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_share_normal_state"
                    android:gravity="center"
                    android:text="Share" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">


                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    app:mrl_rippleAlpha="0.1"
                    app:mrl_rippleColor="@color/ripplecolor"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_ripplePersistent="false">


                    <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                        android:id="@+id/txtAddReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="View / Add Reviews"
                        android:textAllCaps="false"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_12sdp" />


                </com.balysv.materialripple.MaterialRippleLayout>

                <TextView
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="wrap_content" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/primary"
                    app:mrl_rippleAlpha="0.1"
                    app:mrl_rippleColor="@color/ripplecolor"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_ripplePersistent="false">


                    <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                        android:id="@+id/bookAppoentmentbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Book Appointment"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />


                </com.balysv.materialripple.MaterialRippleLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>