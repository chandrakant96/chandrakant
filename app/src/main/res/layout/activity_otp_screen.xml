<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".activities.ReportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

           <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Verification Code"
                android:textSize="@dimen/_12sdp" />

           <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Please type the verification code sent to"
                android:textAlignment="center"
                android:textSize="@dimen/_12sdp" />

           <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:id="@+id/txtMobileNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textSize="@dimen/_12sdp" />

            <com.goodiebag.pinview.Pinview
                android:id="@+id/pinview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:cursorVisible="true"
                app:forceKeyboard="true"
                app:inputType="number"
                app:password="false"
                app:pinHeight="@dimen/_50sdp"
                app:pinLength="4"
                app:pinWidth="@dimen/_50sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal">
<com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                    android:id="@+id/txtChangeNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Change Number ?"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp" />

               <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                    android:id="@+id/txtResendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Resend Code ?"
                    android:textAlignment="center"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>