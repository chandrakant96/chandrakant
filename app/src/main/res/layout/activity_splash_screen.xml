<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/_60sdp"
            android:src="@drawable/ic_action_whr_log" />


        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
            android:id="@+id/oneStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_4sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="WHR - One stop solution for all healthcare needs"
            android:textColor="@color/primary"
            android:textSize="@dimen/_10sdp" />


        <LinearLayout
            android:id="@+id/getLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/oneStop"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progresBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />

            <com.whr.user.com.WHR.ViewPackage.OpenSansRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/_10sdp"
                android:text="Getting Your Location...."
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>