<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:focusableInTouchMode="true"
    tools:context=".governmentscheme.GovernmentSchemeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary">

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                app:mrl_rippleColor="@color/black"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    app:srcCompat="@drawable/ic_action_back" />

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_toEndOf="@id/imgBack"
                android:layout_toRightOf="@id/imgBack"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <View
            android:id="@+id/viewOne"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layoutTop"
            android:background="@color/accent" />

        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
            android:id="@+id/txtNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primary"
            android:padding="@dimen/_10sdp"
            android:text="Next"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/txtNext"
            android:layout_below="@id/viewOne"
            android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">


                <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone"
                    android:text="आवश्यक कागदपत्रांचा तपशील"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/f3TotalIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="* मागील वर्षाचे कुटुंबाचे एकत्रित उत्पन्न रुपये "
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3etxIncomeCertificateNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="* उत्पन्नाचे प्रमाणपत्र क्रमांक "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3etxReshanCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="* राशन कार्ड क्रमांक"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />


                <EditText
                    android:id="@+id/f3etxTotalRupye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="* उपचारासाठी रुग्णालयाचा खर्च "
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3etxPatrakNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="उपचारासाठी रुग्णालयाचे खर्च अंदाज पत्रक क्रमांक "
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3TotalTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="संपूर्ण उपचारासाठी लागणार कालावधी"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/divider" />

                <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="आर्थिक मदतीसाठी शिफारस तपशील"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/f3ShifrasName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="* शिफारस करणाऱ्यांचे संपूर्ण नाव "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3ShifarasPad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="* शिफारस करणाऱ्यांचे पद "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3ShifrasNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="* शिफारस पत्र क्रमांक "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawableRight="@drawable/ic_calendar"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="* दिनांक"
                    android:imeOptions="actionNext"
                    android:inputType="date"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="शिफारस करणाऱ्या व्यक्तीचा  पत्ता "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="पिनकोड "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3Taluka"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="तालुका "
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/f3Dist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/background_card"
                    android:fontFamily="OpenSans-Regular.ttf"
                    android:hint="जिल्हा"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>