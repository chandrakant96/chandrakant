<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativeToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_back" />

            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toEndOf="@+id/imgBack"
                android:layout_toRightOf="@id/imgBack"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="arthoscopic surgery operative"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtBook"
            android:layout_below="@+id/relativeToolbar"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="@dimen/_5sdp"
                    android:text="Package for Arthoscopic Surgery Operative" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="#f2f2f2"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="general"
                        android:textAllCaps="true" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="#f2f2f2"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="semi"
                        android:textAllCaps="true" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="#f2f2f2"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="ac"
                        android:textAllCaps="true" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="@dimen/_5sdp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL STAY 2 DAYS"
                            android:textAllCaps="true" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="particulars"
                                android:textAllCaps="true"
                                android:textColor="@color/primary" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="amount"
                                android:textAllCaps="true"
                                android:textColor="@color/primary" />


                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right|end"
                                android:text="Total"
                                android:textColor="@color/primary" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:text="28640"
                                android:textAllCaps="true"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right|end"
                                android:text="WHR Discounted price"
                                android:textColor="@color/primary" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:text="25776"
                                android:textColor="@color/black" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="* Included" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Administration, Bed Charges, Doctor Charges, Investigation" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="* Excluded" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Medicine" />


                        </LinearLayout>


                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/TermsAndCondition"
                            android:textAllCaps="true"
                            android:textColor="@color/black" />

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/TermsAndCondition" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>

        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
            android:id="@+id/txtBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/primary"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/Book"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>