<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_6sdp"
    android:orientation="vertical">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="@color/rippelColor"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        app:mrl_ripplePersistent="false">


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_2sdp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="@dimen/_4sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/relativeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageDoctor"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_65sdp"
                        android:src="@drawable/ic_doctor_color"
                        app:srcCompat="@drawable/ic_doctor_color"
                        card_view:civ_border_color="@color/primary"
                        card_view:civ_border_width="@dimen/_2sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:orientation="vertical">

                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:id="@+id/txtDoctorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. hasmukh gujar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtEducation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MBBS"
                            android:textSize="@dimen/_11sdp" />

                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtSpecialization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cardiologist"
                            android:textSize="@dimen/_11sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtExperience"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                            <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                                android:id="@+id/txtExpTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Yrs Experience"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/txtPersonalHospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:drawableStart="@drawable/ic_hospital_icon"
                    android:drawableLeft="@drawable/ic_hospital_icon"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_3sdp"
                    android:text="Inamdar"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                    android:id="@+id/txtAvailableToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_appointment_available"
                    android:drawableLeft="@drawable/ic_appointment_available"
                    android:drawablePadding="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_3sdp"
                    android:text="Slots available for Today"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Fees - " />

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/txtFees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/strike"
                        android:gravity="center_vertical" />

                    <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                        android:id="@+id/txtDiscountedFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/green" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/txtLikes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="11
likes" />


                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/txtReviews"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="11
reviews" />


                    <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                        android:id="@+id/txtDistance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="11
km" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:visibility="gone"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="@color/black"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true"
                        app:mrl_ripplePersistent="false">


                        <com.whr.user.com.WHR.ViewPackage.OpenSansSemiBold
                            android:id="@+id/txtCall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Pay and Call"
                            android:textAllCaps="false"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_12sdp" />


                    </com.balysv.materialripple.MaterialRippleLayout>


                    <View
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="5dp"
                        android:visibility="gone" />

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/primary"
                        app:mrl_rippleAlpha="0.1"
                        app:mrl_rippleColor="@color/rippelColor"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true"
                        app:mrl_ripplePersistent="false">


                        <com.whr.user.com.WHR.ViewPackage.OpenSans_Bold
                            android:id="@+id/txtBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Book Appointment"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </com.balysv.materialripple.MaterialRippleLayout>


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>


</LinearLayout>